<h1 class="text-3xl font-bold text-gray-800 mb-6">All Posts</h1>

<div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>

<div class="mt-8 text-center">
  <%= link_to "Create New Post", new_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition-colors text-lg" %>
</div>

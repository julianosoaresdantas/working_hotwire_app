kk<div id="<%= dom_id(post) %>" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
  <% if post.image.attached? %>
    <div class="flex justify-center p-4">
      <%# Adjusted image class: explicit width, height, object-contain, and max-w-xs %>
      <%= image_tag post.image, class: "w-48 h-48 object-contain rounded-lg max-w-xs" %>
    </div>
  <% end %>
  <div class="p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-2">
      <%= post.title %>
    </h2>
    <p class="text-gray-700 text-base mb-4 line-clamp-3">
      <%= post.content %>
    </p>

    <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
      <span>By <%= post.user.email %></span>
      <span><%= time_ago_in_words(post.created_at) %> ago</span>
    </div>

    <div class="flex items-center space-x-4 mt-6">
      <%= link_to "View Post", post, class: "text-blue-600 hover:underline font-medium" %>

      <% if user_signed_in? && post.user_id == current_user.id %>
        <span class="text-gray-300">|</span>
        <%= link_to "Edit", edit_post_path(post), class: "text-green-600 hover:underline font-medium" %>
        <span class="text-gray-300">|</span>
        <%= button_to "Delete", post, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" }, class: "text-red-600 hover:underline font-medium" %>
      <% end %>
    </div>
  </div>
</div>

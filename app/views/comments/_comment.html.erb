<%# app/views/comments/_comment.html.erb %>
<div id="<%= dom_id(comment) %>" class="bg-gray-50 rounded-lg p-4 mb-4 shadow-sm">
  <div class="flex justify-between items-start mb-2">
    <p class="text-gray-800">
      <strong class="font-semibold text-blue-700"><%= comment.user.email %>:</strong>
      <span class="ml-2 text-gray-700"><%= comment.content %></span>
    </p>
    <% if user_signed_in? && comment.user_id == current_user.id %>
      <%= button_to "Delete", post_comment_path(comment.post, comment), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?", turbo_stream: true }, class: "text-red-500 hover:text-red-700 text-sm font-medium transition-colors" %>
    <% end %>
  </div>
  <p class="text-xs text-gray-500 text-right">
    <%= time_ago_in_words(comment.created_at) %> ago
  </p>
</div>

<%= form_with(model: [post, comment], data: { turbo_frame: "comments", turbo_action: "append" }, class: "bg-white p-6 rounded-lg shadow-md") do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-6" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul class="list-disc list-inside">
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :content, "Your Comment", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :content, placeholder: "Add a comment...", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline h-24 resize-y" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Post Comment", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline cursor-pointer transition-colors" %>
  </div>
<% end %>
